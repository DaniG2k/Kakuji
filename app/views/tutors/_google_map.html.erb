<% content_for(:google_maps_api) do %>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=AIzaSyCOD4-oyL910CcrjP9k222OdxsgdFpSj1E&sensor=false&libraries=drawing" %>
<script type="text/javascript">
	function initialize() {
	  var myLatlng = new google.maps.LatLng(-25.363882,131.044922);
	  
	  var mapOptions = {
	    zoom: 4,
	    center: myLatlng
	  }
	  var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);
		
		var tutors = <%= raw tutors_gmaps %>;
		
		for (var i = 0; i < tutors.length; i++) {
			var tutor = tutors[i];
		  var marker = new google.maps.Marker({
		  	title: tutor[0],
		    position: new google.maps.LatLng(tutor[1], tutor[2]),
		    map: map
		  });
		}
	}
	
	google.maps.event.addDomListener(window, 'load', initialize);
</script>
<% end %>

<div id="map-canvas" style="width: 584px; height: 500px"></div>
