<% title t '.title' %>
<h1><%= t '.title' %></h1>

<%= render "errors" %>

<div class="panel borderless-top panel-default">
	<div class="panel-body">
		<% flash.each do |type, msg| %>
			<% if type == :notice %>
				<div class="alert alert-warning alert-dismissable">
					<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
					<%= msg %>
				</div>
			<% end %>
    <% end %>
		<div class="text-center">
			<%= paginate @tutors %>
		</div>
		<div class="panel panel-default">
		  <div class="panel-heading">Panel heading</div>
		  <table class="table table-hover table-striped table-bordered">
		  	<tr>
					<th><%= t('.tutor_name') %></th>
					<th><%= table_sort('rate', t(:rate, scope: 'activerecord.attributes.tutor') ) %></th>
					<th><%= table_sort('country', t(:country, scope: 'activerecord.attributes.tutor') ) %></th>
					<th><%= t(:description, scope: 'activerecord.attributes.tutor') %></th>
					<th>Details</th>
				</tr>
			  <% @tutors.each do |tutor| %>
				<tr>
					<td>
						<strong>
							<%= link_to tutor.user.fullname, new_message_path(:recipient_id => tutor) %>
						</strong>
					</td>
					<td><%= tutor.rate %></td>
					<td><%= tutor.country %></td>
					<td><%= tutor.description %></td>
					<td class="text-center">
						<%= link_to t('.view_tutor_button'), "#tModal#{tutor.id}", "data-toggle" => "modal", :class => "btn btn-success btn-xs" %>
					</td>
				</tr>
				<%= render :partial => 'modal', :locals => {:tutor => tutor} %>
				<% end %>
		  </table>
		</div>
	</div>
</div>