<% title t('.sign_in') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h1><%= t('.sign_in') %> <br /><small><%= t '.not_registered' %> <%= link_to t('devise.registrations.new.sign_up'), new_registration_path(resource_name) %></small></h1>
		<%= content_tag(:div, flash[:alert], :id => "flash_alert", :class => "alert alert-warning") if flash[:alert] %>
		
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { role: "form" }) do |f| %>
  	<div class="form-group">
  		<%= f.email_field :email, :autofocus => true, :placeholder => t('email', scope: 'activerecord.attributes.user'), :class => "form-control" %>
  	</div>
  	<div class="form-group">
  		<%= f.password_field :password, :placeholder => t('password', scope: 'activerecord.attributes.user'), :class => "form-control" %>
  	</div>

  	<% if devise_mapping.rememberable? -%>
  	<div class="checkbox">
  		<label><%= f.check_box :remember_me %> <%= t('remember', scope: 'devise.sessions.new') %></label>
  	</div>
  	<% end -%>
  	<div class="text-center">
  		<%= f.submit t('.sign_in'), :class => 'btn btn-primary' %>
  	</div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>