<% title t('.sign_up') %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<h1><%= t('.sign_up') %><br /><small><%= t '.registered' %> <%= link_to t('devise.sessions.new.sign_in'), new_session_path(resource_name) %></small></h1>
  	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f| %>
		  <%= devise_error_messages! %>
		  <div class="form-group">
		  	<%= f.email_field :email, :autofocus => true, :placeholder => t('email', scope: 'activerecord.attributes.user'), :class => "form-control" %>
		  </div>
		  <div class="form-group">
		  	<%= f.password_field :password, :placeholder => t('password', scope: 'activerecord.attributes.user'), :class => "form-control" %>
		  </div>
		  <div class="form-group">
		  	<%= f.password_field :password_confirmation, :placeholder => t('password_confirmation', scope: 'activerecord.attributes.user'), :class => "form-control" %>
		  </div>
		  <div class="checkbox">
		    <label>
		      <%= f.check_box :terms %> <%= t('terms', scope: 'activerecord.attributes.user') %>
		    </label>
		  </div>
		  <div class="text-center">
		  	<%= f.submit t('.sign_up'), :class => 'btn btn-success' %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>
  </div>
</div>
